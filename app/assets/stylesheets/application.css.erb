/* Body */
body {
  background-image: url(<%= asset_path 'brickwall.png' %>);
}

.full-width { 
  width: 100%; 
  max-width: 100%; 
}

#main {
  margin-top:3.5em;
}

/* Side Nav Bar */

#navbar {
  margin-top:3.5em;
  padding-left: 1em;
}

/* Top Nav Bar */
.top-bar {
  opacity:0.8;
}
ul.nav {
  background-color:transparent;
  list-style: none;
  margin: 0 0 2em;
  padding: 0;
}
ul.nav li {
  display: inline;
  color: red;
}

/* Flash Alerts */
#flash_notice, #flash_alert {
  padding: 5px 8px;
  margin: 10px 0;
}
#flash_notice {
  background-color: #CFC;
  border: solid 1px #6C6;
}
#flash_alert {
  background-color: #FCC;
  border: solid 1px #C66;
}