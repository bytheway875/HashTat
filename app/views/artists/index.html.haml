.artistsindex.large-12.columns
	%h1 Browse Tattoo Artists
	.row
		- @artists.each do |artist|
			.artistcontainer.large-2.columns
				- if artist.avatar_url
					= image_tag ("#{artist.avatar}")
				- else
					= image_tag ("avatardefault.gif")
				%br
				= link_to "#{artist.full_name}", artist_path(artist)