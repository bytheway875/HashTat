<!-- Add artist field and select tags for gender & body parts. -->

<%= simple_form_for(@tattoo) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.label :picture %><br />
    <%= f.file_field :picture %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :placeholder => "The story behind your tat." %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.text_field :gender %>
  </div>
  <div class="field">
    <%= f.label :body_location %><dr />
    <%= f.text_field :body_location%>
  </div>
  <div class="field">
    <%= f.label :studio %><dr />
    <%= f.text_field :studio%>
  </div>
  <div class="field">
    <%= f.label :location, "Location (e.g. Austin, Texas)" %><dr />
    <%= f.text_field :location %>
  </div>
 <div class="field">
    <%= f.label :hashtags %><br />
    <%= f.text_field :hashtags %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Add my tat" %>
  </div>
<% end %>

