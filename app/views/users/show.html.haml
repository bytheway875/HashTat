.row
  .large-12.columns
    .leftside.large-3.columns.panel
      .avatarshow
        = image_tag ("avatardefault.gif")
      .usernametitle
        %h1 #{@user.username}
        %hr
        = "#{@user.location}"
        %br
        = "#{@user.about_me}"
        %br
        = "#{@user.memorable_story}"
        - if @user == current_user
          = link_to "Edit your profile", edit_user_path
        - else
    .rightside.large-offset-1.column.large-8.columns
      %h1 My Ink
      %hr
      - if @user.tattoos == 0
        = "This user has not added any Ink."
      - else
        - @tattoos.each do |tattoo|
          .user_tat.large-3.columns
            = show_tattoo_photo_profile(tattoo)